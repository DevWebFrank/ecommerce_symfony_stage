{% extends 'base.html.twig' %}


{% block title %}Site chaussures
{% endblock %}

{% block body %}

	<section class="container py-5">
		<div class="row text-center pt-3">

			{% include "_messages_flash.html.twig" %}

			<div class="col-12 d-flex align-items-center justify-content-between">

				<h3 class="h3">Blog</h3>
				<a class="btn btn-secondary btn-sm" href="{{ path('home')}}">Retour Ã  l'accueil/Customer</a>
			</div>

			{% for post in posts %}
				<div class="col-sm-12 col-md-6 col-lg-4 d-flex align-items-center justify-content-between">

					<div class="card">
						<img src="{{ post.imagePath }}" alt="image_category" class="card-img-top imageCard">

						<div class="card-body">
							<h5 class="card-title">{{ post.title }}</h5>
							{{ post.content | truncateText | raw }}
							<a href="{{ path('blog_post_show',{'id': post.id}) }}" class="btn btn-primary w-100">Consulter/customer</a>

						</div>
					</div>
				</div>
			{% endfor %}


		</div>
	</section>

{% endblock %}
