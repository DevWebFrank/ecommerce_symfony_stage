{% extends "base.html.twig" %}

{% block body %}

	<section>
		<div class="container py-5">
			<div class="row">
				{% include "_messages_flash.html.twig" %}

				<div class="col-12">
					<a href="{{ path('boutique_product_show_by_category',{'id':product.category.id}) }}" class=" btn btn-secondary mb-3">Retour à la catégorie</a>

				</div>


				<div class="col-sm-12 col-md-4">
					<div class="card imgDetailProduct">
						<img src="{{ product.imagePath }}" class="card-img-top" alt="image_category">
					</div>
				</div>

				<div class="col-sm-12 col-md-8">
					<div class="card">
						<div class="card-body titleProduct">

							<h5 class="card-title">{{ product.name }}</h5>
							<p class="textPriceProductDetail">
								<span class="titreProduit">Prix :
								</span>
								{{ product.price | priceEuro }}
							</p>

							<p>
								<span class="titreProduit">Description :
								</span>
								{{ product.description }}</p>

							<p>
								<span class="titreProduit">Style :</span>
								{{ product.style }}</p>
							<p>
								<span class="titreProduit">Couleur disponible :
								</span>
								{{ product.color}}</p>
							<p>
								<span class="titreProduit">taille disponible :
								</span>
								{{ product.size}}</p>
							<p>
								<span class="titreProduit">Saison :
								</span>
								{{ product.season}}</p>

							<div class="row justify-content-end">
								<a href="{{ path('cart_add',{ 'id' : product.id } ) }}" class="btn btn-primary btn-sm col-md-4 ">Ajouter au panier</a>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>

	<section>
		<div class="container py-1">
			<div class="row">
				<div class="col-12">
					<h3 class="text-center">D'autres produits</h3>
					<hr>
				</div>

				{% for product in suggestedProducts %}


					<div class="col-sm-12 col-md-6 col-lg-3">

						<div class="card">
							<img src="{{ product.imagePath }}" class="card-img-top" alt="image_category">
							<div class="card-body">
								<h5 class="card-title">{{ product.name }}</h5>
								<p>{{ product.price | priceEuro }}</p>
								<a href="{{ path('boutique_product_detail',{'id': product.id} ) }}" class="btn btn-primary btn-sm w-100">Consulter</a>
							</div>
						</div>

					</div>
				{% endfor %}


			</div>
		</div>
	</section>


{% endblock %}
