						<div class="col-6 contact_sidebar_form">
							<div class="contactFormLeft">
								{{ form_start(form)}}
								{{ form_row(form.email)}}
								{{ form_widget(form)}}
								<div class="form-group">
									<input type="submit" value="Nous faire parvenir" class="btn btn-primary py-3 px-5 w-100">
								</div>

								<!-- <button class="btn btn-primary mt-1 py-3 px-5 w-100" type="submit" value="#">Nous faire parvenir</button> -->
								{{ form_end(form)}}
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>


	{% endblock %}
