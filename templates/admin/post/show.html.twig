{% extends 'admin/base.html.twig' %}

{% block title %}PostAdmin index
{% endblock %}

{% block body %}
	<div class="container py-5">

		<div class="row">

			{% include "_messages_flash.html.twig" %}

			<div class="col-12">
				<a class="btn btn-secondary mb-2" href="{{ path('admin_post_list') }}">Retour à la listee</a>
			</div>

			<div class="col-sm-12 col-md-6 col-lg-6 d-flex align-items-center justify-content-between">

				<div class="card">
					<img src="{{ post.imagePath }}" alt="image_category" class="card-img-top imageCard">

					<div class="card-body">
						<h5 class="card-title">{{ post.title }}</h5>
						{{ post.content | truncateText | raw }}
					</div>
				</div>
			</div>

			<div class="col-sm-12 col-md-6 col-lg-6">

				<div class="card">
					<div class="card-body">
						<h5 class="card-title">Configuration</h5>
						<p>Crée le
							{{ post.created_at | date('d-M-Y') }}</p>
						<p>Status :
							{{ post.status }}
						</p>
					</div>
					<div class="card-footer">
						{% if post.status is same as 'Brouillon' %}
							<a href="{{ path('admin_post_toggle_status',{'id': post.id}) }}" class="btn btn-success w-100">Publier le post</a>
						{% else %}
							<a href="{{ path('admin_post_toggle_status',{'id': post.id}) }}" class="btn btn-info w-100">Passer en brouillon</a>
						{% endif %}
					</div>
				</div>
			</div>


		</div>
	</div>
{% endblock %}
