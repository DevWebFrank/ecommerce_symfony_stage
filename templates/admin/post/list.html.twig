{% extends 'admin/base.html.twig' %}

{% block title %}Post index
{% endblock %}

{% block body %}


	<div class="container py-5">
		<div class="row">

			{% include "_messages_flash.html.twig" %}

			<div class="col-12 d-flex align-items-center justify-content-between">
				<h3>Liste des posts</h3>
				<a class="button" href="{{ path('admin_post_new') }}">Ajouter</a>
			</div>

			{% for post in posts %}
				<div class="col-sm-12 col-md-6 col-lg-4 d-flex align-items-center justify-content-between">

					<div class="card">
						<img src="{{ post.imagePath }}" alt="image_category" class="card-img-top imageCard">

						<div class="card-body">
							<h5 class="card-title">{{ post.title }}</h5>
							{{ post.content | truncateText | raw }}

							<a href="{{ path('admin_post_show',{'id': post.id }) }}" class="btn btn-primary w-100">Consulter/admin</a>


						</div>
					</div>
				</div>
			{% endfor %}


		</div>
	</div>
{% endblock %}
